@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group-btn">
                <button class="btn glyphicon-search">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants) {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Cuisine</td>
        <td>@restaurant.Location</td>
        <td>
            <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                <i class="glyphicon glyphicon-search" />
            </a>
        </td>
        <td>
            <a class="btn btn-primary" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                <i class="glyphicon glyphicon-search" />
            </a>
        </td>
    </tr>
    }
    
</table>

<a class="btn btn-dark" asp-page="./Edit">Add New Restaurant</a>


